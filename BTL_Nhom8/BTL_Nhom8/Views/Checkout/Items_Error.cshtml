@model IEnumerable<BTL_Nhom8.Dto.ItemError>
@{
    ViewBag.Title = "Items_Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center"
         style="background-image: url(/wwwroot/img/bg-img/24.jpg);">
        <h2>Sản phẩm</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Cart")">Giỏ hàng</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Sản phẩm lỗi</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container">
    <h2>Sản phẩm đặt hàng lỗi</h2>
    <p>Danh sách các mặt hàng có số lượng đặt lớn hơn số lượng có trong kho:</p>
    <table class="table">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Price</th>
                <th>Số lượng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/wwwroot/img/Images/@item.productDto.Avatar" width="100" height="100" /></td>
                    <td>@item.productDto.Name</td>
                    <td>@item.productDto.Price</td>
                    <td>@item.slOrder -> @item.slt</td>
                </tr>
            }

        </tbody>
    </table>
</div>



