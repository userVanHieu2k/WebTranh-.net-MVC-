@model BTL_Nhom8.Models.Account

@{
    ViewBag.Title = "Edit";
}

<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(/wwwroot/img/bg-img/24.jpg);">
        <h2>Thông tin cá nhân</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Cá nhân</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Contact Area Info Start ##### -->
<div class="contact-area-info section-padding-0-100">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <!-- Contact Thumbnail -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Account_Id)
                <div class="row">
                    <div style="font-size: 25px; font-weight: bolder; margin-bottom: 10px; margin-left: 10px;">Sửa thông tin tài khoản</div>
                    <div class="col-12">
                        <div style="font-weight: bolder;">@Html.Label("Tên người dùng : ")</div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên người dùng", @type = "text", @id = "username" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div></div>
                    <br>
                    <div class="col-12">
                        <div style="font-weight: bolder;">@Html.Label("Tên khách hàng : ")</div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Customer_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập họ tên", @type = "text", @id = "name" } })
                            @Html.ValidationMessageFor(model => model.Customer_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div></div>
                    <br>
                    <div class="col-12">
                        <div style="font-weight: bolder;">@Html.Label("Mật khẩu : ")</div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mật khẩu", @type = "password", @id = "name" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div></div>
                    <br>
                    <div class="col-12">
                        <div style="font-weight: bolder;">@Html.Label("Email : ")</div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập email", @type = "email", @id = "email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                           
                        </div>
                    </div>
                    <div></div>
                    <p style="color:red;">@ViewBag.Error</p>
                    <div></div>
                    <div class="col-12">
                        <button type="submit" class="btn alazea-btn mt-15">Cập nhật</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- ##### Contact Area Info End ##### -->